{
  "name": "as_wasm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "node --experimental-wasm-bigint ./tests/index.js",
    "asbuild:untouched": "asc assembly/index.ts -b build/untouched.wasm -t build/untouched.wat --runtime none --sourceMap --debug",
    "asbuild:optimized": "asc assembly/index.ts -b build/optimized.wasm -t build/optimized.wat --runtime none --sourceMap -O3 --converge",
    "asbuild": "npm run asbuild:untouched && npm run asbuild:optimized",
    "build": "npm i && npm run asbuild:optimized && cp build/optimized.wasm ./docs/pkg/ && browserify ./docs/pkg/main.js -o ./docs/pkg/index.js"
  },
  "author": "Ian McCall <ian@ianmccall.codes>",
  "license": "MIT",
  "devDependencies": {
    "assemblyscript": "^0.13.6",
    "browserify": "^16.5.1"
  },
  "dependencies": {
    "@assemblyscript/loader": "^0.13.6"
  }
}
